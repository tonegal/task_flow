package main

import (
	"sync"
	"time"

	//packages and main.go files need to be renamed to consumer/producer instead of main
	cons "example.com/task_flow/cmd/consumer"
	prod "example.com/task_flow/cmd/producer"
)

func main() {
	var wg sync.WaitGroup

	wg.Add(1)
	go func() {
		defer wg.Done()
		cons.Init_Consumer()
	}()
	wg.Add(1)
	go func() {
		defer wg.Done()
		// Some delay to ensure the consumer starts first
		time.Sleep(2 * time.Second)
		prod.Init_Producer()
	}()

	wg.Wait()
}
